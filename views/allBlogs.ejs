<%- include('./partials/navbar') %>
<link rel="stylesheet" href="/css/style.css">
<title>All Blogs </title>

<div class="container">
    <div class="all-blogs">
        <% if(blogs.length == 0) {%>
            <div class="message-danger">
                <h1>no posts yet :(</h1>
            </div>
            <a href="/new-blog" class="btn-success">Add New Post</a>
        <% } %>
        <% for(let blog of blogs){ %>
            <div class="blog">
                <div class="blog-top">
                    <div class="blog-user">
                        <img src="/images/user.png" alt="user-profile">
                        <p> <%= blog.user %> </p>
                    </div>
                    <p> <%= blog.date_posted %> </p>
                </div>
                <div class="blog-data">
                    <h4> <%= blog.title %> <i style="color:steelblue; font-size: 0.8em;"> (<%= blog.category %>) </i> </h4>
                    <%- blog.marked %>
                </div>
                <form action="/view-blog/<%= blog.blogId %>" method="get" class="blog-view">
                    <button> View </button>
                    <a href="/edit/<%= blog.blogId %>" class="btn-success">Edit</a>
                </form>
                <form action="/delete/<%= blog.blogId %>" method="post" style="width: 100%; display: flex; justify-content: center;">
                    <button type="submit" class="btn-danger" style="color: white;"> Delete </button>
                </form>
            </div>    
        <% } %>
    </div>
</div>
