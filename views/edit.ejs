<%- include('./partials/navbar') %>
<link rel="stylesheet" href="/css/style.css">
<title>Edit - <%= blog.title %></title>

<div class="container">
    <h1>Edit <%= blog.title %></h1>
    <form action="" class="form" method="post">
        <div class="form-data">
            <label for="id"> Blog ID </label>
            <input type="text" name="id" id="id" value="<%= blog.blogId %>" readonly>
        </div>
        <div class="form-data">
            <label for="title"> Title </label>
            <input type="text" name="title" id="title" value="<%= blog.title %>">
        </div>
        <div class="form-data">
            <label for="category"> Category </label>
            <input type="text" name="category" id="category" value="<%= blog.category %>">
        </div>
        <div class="form-data">
            <label for="text"> Text </label>
            <textarea name="text" id="text" rows="10"> <%= blog.text %> </textarea>
        </div>
        <button class="btn-success">Update</button>
    </form>
</div>