    <h1> Register </h1>
    <div class="form-data">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required>
    </div>
    <div class="form-data">
        <label for="username">Userame</label>
        <input type="text" name="username" id="username" required>
    </div>
